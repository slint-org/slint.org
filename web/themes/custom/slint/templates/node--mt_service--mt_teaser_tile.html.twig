{#
/**
 * @file
 * SLINT's theme implementation to display a Service node in teaser tile view mode.
 */
#}
{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('slint/node-view-mode-teaser-tile') }}
{% if node.isSticky() %}
  <article{{ attributes.addClass(classes) }}>
    <div class="row">
      <div class="col-lg-8">
        {% if content.field_mt_srv_teaser_image|render %}
          {{ content.field_mt_srv_teaser_image }}
        {% endif %}
      </div>
      <div class="col-lg-4">

        {% if content.field_mt_srv_service_tags|render %}
          {{ content.field_mt_srv_service_tags }}
        {% endif %}

        {{ title_prefix }}
        {% if not page %}
          <h2{{ title_attributes.addClass("mt-0 node__title") }}>
            <a href="{{ url }}" rel="bookmark">{{ label }}</a>
          </h2>
        {% endif %}
        {{ title_suffix }}

        <div{{ content_attributes.addClass('node__content') }}>
          {{ content|without('field_mt_srv_teaser_image', 'field_mt_srv_service_tags') }}
        </div>

        {% trans %}
          <a class="link--alternative" href="{{ url }}">Read more</a>
        {% endtrans %}

      </div>
    </div>
  </article>
{% else %}
  <article{{ attributes.addClass(classes) }}>

    {% if content.field_mt_srv_teaser_image|render %}
      {{ content.field_mt_srv_teaser_image }}
    {% endif %}

    {% if content.field_mt_srv_service_tags|render %}
      {{ content.field_mt_srv_service_tags }}
    {% endif %}

    {{ title_prefix }}
    {% if not page %}
      <h4{{ title_attributes.addClass("mt-0 node__title") }}>
        <a href="{{ url }}" rel="bookmark">{{ label }}</a>
      </h4>
    {% endif %}
    {{ title_suffix }}

    <div{{ content_attributes.addClass('node__content') }}>
      {{ content|without('field_mt_srv_teaser_image', 'field_mt_srv_service_tags', 'field_mt_srv_body') }}
    </div>

  </article>
{% endif %}
